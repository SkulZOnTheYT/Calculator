BoxLayout:
    orientation: 'vertical'
    
    TextInput:
        id: display
        font_size: 32
        multiline: False
    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        
        Button:
            text: '7'
            on_release: display.text += self.text

        Button:
            text: '8'
            on_release: display.text += self.text

        Button:
            text: '9'
            on_release: display.text += self.text

        Button:
            text: '/'
            on_release: display.text += self.text

    # ... Tambahkan tombol lainnya di sini ...
    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: 'C'
            on_release: display.text = ''

        Button:
            text: '0'
            on_release: display.text += self.text

        Button:
            text: '='
            on_release: display.text = str(eval(display.text))
